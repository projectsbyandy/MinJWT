	"item": [
		{
			"name": "Vendors",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status Code\", ()=> {",
							"    pm.expect(pm.response.code).to.eql(200);",
							"})",
							"",
							"pm.test(\"Response will contain at least 3 entries\", ()=> {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.count()).to.be.greaterThan(3);",
							"})",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{server}}/keyboard/vendors",
					"host": [
						"{{server}}"
					],
					"path": [
						"keyboard",
						"vendors"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create Vendor",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status Code\", ()=> {",
							"    pm.expect(pm.response.code).to.eql(201);",
							"})",
							"",
							"pm.test(\"Verify vendor data in repsonse\", ()=> {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.name).to.eql(\"Prototypist\")",
							"    pm.expect(responseJson.brands.length).to.eql(2)",
							"    pm.expect(responseJson.brands).to.have.members([\"Cherry\", \"Gmk\"])",
							"})",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"id\":\"{{$guid}}\",\n    \"Name\": \"Prototypist\",\n    \"Brands\": [\n        \"Cherry\", \"Gmk\"\n    ]\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{server}}/keyboard/vendors",
					"host": [
						"{{server}}"
					],
					"path": [
						"keyboard",
						"vendors"
					]
				}
			},
			"response": []
		}
	]
